<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ImageUploadFragment">

    <TextView
        android:id="@+id/imageUploadSubTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageUploadImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageUploadImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_user_profile_24"
        app:layout_constraintBottom_toTopOf="@+id/imageUploadSelectImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/user_profile_picture" />


    <Button
        android:id="@+id/imageUploadSelectImageButton"
        style="@android:style/Widget.Button"
        android:layout_width="167dp"
        android:layout_height="46dp"
        android:layout_below="@+id/imageUploadImageView"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:text="@string/choose_image"
        app:layout_constraintBottom_toTopOf="@+id/OpenCameraButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/OpenCameraButton"
        style="@android:style/Widget.Button"
        android:layout_width="167dp"
        android:layout_height="46dp"
        android:layout_below="@+id/imageUploadImageView"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:text="@string/take_photo"
        app:layout_constraintBottom_toTopOf="@+id/imageUploadEnterArena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/imageUploadEnterArena"
        style="@android:style/Widget.Button"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:background="@null"
        android:text="@string/enter_to_the_arena"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>